# Example configuration for Simple Chores integration
# Copy this file to your Home Assistant config directory as simple_chores.yaml

chores:
  - name: "Take Out Trash"
    slug: "take_out_trash"
    description: "Take the trash and recycling bins to the curb"
    frequency: "manual"
    icon: "mdi:trash-can"  # Optional: Custom Material Design Icon
    points: 5  # Optional: Points awarded for completion (default: 1)
    assignees:
      - "john"
      - "jane"

  - name: "Wash Dishes"
    slug: "wash_dishes"
    description: "Wash and put away dishes from dinner"
    frequency: "daily"
    icon: "mdi:dishwasher"
    points: 3
    assignees:
      - "john"
      - "jane"
      - "kid1"

  - name: "Vacuum Living Room"
    slug: "vacuum_living_room"
    description: "Vacuum the living room and dining area"
    frequency: "manual"
    icon: "mdi:vacuum"
    points: 10
    assignees:
      - "jane"

  - name: "Clean Bathroom"
    slug: "clean_bathroom"
    description: "Deep clean the bathroom including toilet, shower, and sink"
    frequency: "manual"
    icon: "mdi:broom"
    points: 15
    assignees:
      - "john"
      - "jane"

# Privileges are rewards that can be granted or revoked based on chore completion
privileges:
  - name: "Screen Time"
    slug: "screen_time"
    icon: "mdi:television"  # Optional: Custom Material Design Icon (default: mdi:star)
    behavior: "automatic"  # automatic: enabled/disabled based on linked chores, manual: only changed via services
    linked_chores:  # For automatic behavior, these chores must be complete to enable the privilege
      - "wash_dishes"
    assignees:
      - "kid1"

  - name: "Gaming"
    slug: "gaming"
    icon: "mdi:gamepad-variant"
    behavior: "manual"  # Manual privileges must be enabled/disabled via services
    linked_chores: []  # Can be empty for manual privileges
    assignees:
      - "kid1"
